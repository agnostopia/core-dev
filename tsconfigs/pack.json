{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["es2020", "dom"],
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"importHelpers": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"isolatedModules": false,
		"sourceMap": true,
		"noImplicitAny": false,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"paths": {
      "~/*": ["src/*"]
    }
	}
}
