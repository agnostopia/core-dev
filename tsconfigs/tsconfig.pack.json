{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"importHelpers": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"isolatedModules": false,
		"sourceMap": true,
		"noImplicitAny": false,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"paths": {
      "~/*": ["src/*"]
		}
	}
}
